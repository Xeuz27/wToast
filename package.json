	"license": "MIT",
	"bugs": {
		"url": "https://github.com/Xeuz27/wToast/issues"
	},
	"homepage": "https://github.com/Xeuz27/wToast#readme",
	"description": "wToast es una utilidad para mostrar un toast, una notificacion con un mensaje normalmente de exito o de fallo de alguna operacion"
}
