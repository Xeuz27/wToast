{
	"name": "@yidev/wtoast",
	"version": "0.1.2",
	"main": "dist/index.js",
	"module": "dist/index.js",
	"types": "dist/index.d.ts",
	"type": "module",
	"files": [
		"dist"
	],
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		},
		"./dist/toast.css": "./dist/toast.css",
		"./toast.css": "./dist/toast.css"
	},
	"sideEffects": false,
	"scripts": {
		"ci": "npm run build && npm run check-format",
		"check-format": "prettier --check .",
		"format": "prettier --write .",
		"test": "echo \"Error: no test specified\" && exit 1",
		"build": "tsup"
	},
	"devDependencies": {
		"@types/react-dom": "^19.2.3",
		"eslint": "^8.57.1",
		"prettier": "^3.6.2",
		"react": "^19.2.0",
		"react-dom": "^19.2.0",
		"standard": "^17.1.2",
		"tsup": "^8.5.0",
		"typescript": "^5.9.3"
	},
	"peerDependencies": {
		"react": ">=18",
		"react-dom": ">=18"
	},
	"prettier": {
		"useTabs": true,
		"trailingComma": "es5",
		"tabWidth": 2,
		"semi": false,
		"singleQuote": false,
		"overrides": [
			{
				"files": [
					"./package-lock.json"
				],
				"options": {
					"useTabs": false,
					"tabWidth": 2
				}
			}
		]
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Xeuz27/wToast.git"
	},
